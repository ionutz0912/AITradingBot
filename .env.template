# AI Provider Configuration
# Choose one: anthropic, xai, grok, deepseek
AI_PROVIDER=anthropic

# API Keys (only the one matching your AI_PROVIDER is required)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
XAI_API_KEY=your_xai_grok_api_key_here
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Exchange Provider Configuration
# Choose one: coinbase, bitunix
EXCHANGE_PROVIDER=coinbase

# Coinbase Advanced Trade API (if EXCHANGE_PROVIDER=coinbase)
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_API_SECRET=your_coinbase_api_secret_here

# Bitunix Exchange (if EXCHANGE_PROVIDER=bitunix)
BITUNIX_API_KEY=your_bitunix_api_key_here
BITUNIX_API_SECRET=your_bitunix_api_secret_here

# Discord Notifications (optional)
DISCORD_WEBHOOK_URL=your_discord_webhook_here

# Telegram Notifications (optional)
# Get bot token from @BotFather, chat ID from @userinfobot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here
